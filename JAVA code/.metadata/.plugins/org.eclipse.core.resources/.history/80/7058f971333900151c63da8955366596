import java.awt.*;
import javax.swing.*;
import java.awt.event.*;
public class Calc extends JFrame implements ActionListener{
    JPanel[] fields = new JPanel[5];
    JButton[] buttons = new JButton[16];
    String[] keys = {"7", "8", "9", "+", "4", "5", "6", "-", "1", "2", "3", "*", "0", ".", "/", "="};
    JTextArea disp = new JTextArea(1, 20);
    Dimension dim = new Dimension(300, 30);
    Font font = new Font("Times new Roman", Font.BOLD, 14);
    Calc() {
        setSize(300, 200);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        GridLayout matrix = new GridLayout(5, 4);
        setLayout(matrix);
        int i;


        for(i = 0; i < 5; i++) {
            fields[i] = new JPanel();
        }
        for(i = 0; i < 16; i++) {
            buttons[i] = new JButton();
            buttons[i].setText(keys[i]);
            buttons[i].addActionListener(this);
        }
        fields[0].add(disp);
        
        for(i = 0; i < 4; i++) {
            fields[1].add(buttons[i]);
        }
        add(fields[1]);
        for(i = 4; i < 8; i++) {
            fields[2].add(buttons[i]);
        }
        add(fields[2]);
        for(i = 8; i < 12; i++) {
            fields[3].add(buttons[i]);
        }
        add(fields[3]);
        for(i = 12; i < 16; i++) {
            fields[4].add(buttons[i]);
        }
        add(fields[4]);
        setVisible(true);
        pack();
    }

    public void actionPerformed(ActionEvent ae) {
    }


    
    public static void main(String[] args) {
        Calc bob = new Calc();
    }
}
